{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "Formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "$CONNECTION_STRING;"
  },
  "OtpService": {
    "BaseUrl": "$OTPSERVICE_URL",
    "OffsetInMinutes": 5,
    "SenderSystemName": "Project-Eka HIP"
  },
  "rabbit": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest"
  },
  "dataFlow": {
    "dataSizeLimitInMbs": 27
  },
  "hip": {
    "url": "$HIP_URL"
  },
  "Gateway": {
    "url": "$GATEWAY_URL",
    "timeout": 2000,
    "counter": 5,
    "clientId": "$GATEWAY_CLIENT_ID",
    "clientSecret": "$GATEWAY_CLIENT_SECRET",
    "cmSuffix": "$GATEWAY_CMSUFFIX"
  },
  "OpenMrs": {
    "url": "$BAHMNI_URL",
    "username": "superman",
    "password": "$OPENMRS_PASSWORD",
    "phoneNumber": "phoneNumber",
    "patientQueueTimeLimit": 30 //in_minutes
  },
  "BackgroundJobs": {
    "cancellationCheckInterval": 5
  },
  "Bahmni": {
    "Id": "$BAHMNI_ID"
  },
  "Hip-Service": {
    "Url": ""
  },
  "Cors": {
    "allowedOrigins": ["$CORS_ALLOWED_ORIGIN"]
  }
}
